{
    "layer": "top",
    "position": "top",
    "height": 24,
    "spacing": 4,

    "modules-left": ["sway/workspaces", "custom/weather", "custom/github", "custom/vpn", "sway/mode"],
    "modules-center": ["custom/media"],
    "modules-right": ["network", "custom/volume", "battery", "clock", "tray"],
    "sway/window": {
        "max-length": 50
    },

    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["", "", "", "", ""]
    },
    "clock": {
        "format-alt": "{:%a, %d. %b  %H:%M}"
    },

    "network": {
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-disconnected": "Disconnected ⚠",
    },

    "custom/vpn": {
        "format": "VPN ",
        "exec": "echo '{\"class\": \"connected\"}'",
        "exec-if": "test -d /proc/sys/net/ipv4/conf/tun0",
        "return-type": "json",
        "interval": 5
    },
    "custom/github": {
        "format": "{} ",
        "return-type": "json",
        "interval": 60,
        "exec": "~/dotfiles/waybar/modules/github.sh",
        "on-click": "firefox https://github.com/notifications"
    },
    "custom/weather": {
        "exec": "curl 'https://wttr.in/Alpharetta?format=1'",
        "interval": 3600,
    },
    "custom/volume": {
        "exec": "echo $(pamixer Master --get-volume-human)",
        "interval": 1,
    },
    "custom/media": {
        "exec": "~/dotfiles/waybar/modules/media.sh",
        "interval": 1,
    }
}
