set $mod Mod4

# Arrow keys
set $left h
set $down j
set $up k
set $right l

# Typematic delay
input type:keyboard {
    repeat_delay 200
    repeat_rate 30
}

input type:touchpad {
    tap enabled
    pointer_accel .12
    scroll_factor .25
    natural_scroll enabled
    scroll_method two_finger
}

output * bg #000000 solid_color

# Lock screen: 5 mins, Sleep: 10 mins
exec swayidle -w \
    timeout 400 'swaylock -f -c 000000' \
    timeout 800 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -c 000000'

# Rudimentary bindings
floating_modifier $mod normal
bindsym $mod+Return exec footclient
bindsym $mod+q kill
bindsym $mod+Space exec $menu
bindsym $mod+Ctrl+c reload


client.focused #404060 #404060 #000000 #666699
client.focused_inactive #333333 #222222 #000000

# Border
default_border pixel 1
hide_edge_borders smart

# Resizing (3px)
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%Y-%m-%d %I:%M:%S %p'; do sleep 1; done
    hidden_state hide
    mode hide
    modifier Mod4

    colors {
        statusline #ffffff
        background #000000
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

include $HOME/dotfiles/sway/custom/*.conf
include /etc/sway/config.d/*
