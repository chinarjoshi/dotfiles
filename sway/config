set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term foot

# Startup applications
exec_always swayidle -w
exec_always wlsunset -l 37.4 -L -112.2
exec_always python3 $DOTFILES/sway/dim.py -o .8

default_border none

seat * xcursor_theme Adwaita 24

#exec swayidle -C $DOTFILES/swayidle/config

input * {
    xkb_options altwin:swap_alt_win
    repeat_delay 250
    repeat_rate 30
    natural_scroll enabled
    scroll_factor 0.15
    tap enabled
    pointer_accel 0.3
}

input type:pointer {
    scroll_factor .5
    pointer_accel 0.1
}


output eDP-1 pos 0 0 scale 2
#output DP-1 mode 3840x2160@60Hz pos 0 0 scale 1.5
output DP-1 mode 2560x1440@60Hz scale 1 pos -416 -1440


# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

    bindsym $mod+Return exec swaymsg splith; exec $term
    bindsym $mod+Space exec swaymsg splith; exec firefox
    bindsym $mod+Shift+Return exec swaymsg splitv; exec $term
    bindsym $mod+Shift+Space exec swaymsg splitv; exec firefox
    bindsym $mod+Tab exec $DOTFILES/sway/workspace $(cat ~/.workspace)
    bindsym $mod+q kill
    bindsym $mod+Shift+c reload
    bindsym $mod+s exec grim -g "$(slurp)" - | swappy -f -
    floating_modifier $mod normal
    bindsym $mod+o exec obsidian
    bindsym $mod+Shift+s exec systemctl suspend
    bindsym $mod+Shift+q exec poweroff
    bindsym $mod+Shift+Control+r exec systemctl reboot

    #bindsym $mod+c exec wl-copy < /dev/null && wl-paste | wl-copy
    #bindsym $mod+v exec wl-paste

    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
    mouse_warping container

    bindsym $mod+Up exec doas light -A 1
    bindsym $mod+Down exec doas light -U 1
    bindsym XF86MonBrightnessUp exec doas light -A 3
    bindsym XF86MonBrightnessDown exec doas light -U 3

    bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10%
    bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10%
    bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    bindsym $mod+Shift+Up exec pactl set-sink-mute @DEFAULT_SINK@ toggle

    bindsym $mod+1 exec $DOTFILES/sway/workspace 1
    bindsym $mod+2 exec $DOTFILES/sway/workspace 2
    bindsym $mod+3 exec $DOTFILES/sway/workspace 3
    bindsym $mod+4 exec $DOTFILES/sway/workspace 4
    bindsym $mod+5 exec $DOTFILES/sway/workspace 5
    bindsym $mod+6 exec $DOTFILES/sway/workspace 6
    bindsym $mod+7 exec $DOTFILES/sway/workspace 7
    bindsym $mod+8 exec $DOTFILES/sway/workspace 8
    bindsym $mod+9 exec $DOTFILES/sway/workspace 9

    bindsym $mod+Shift+1 move container to workspace number 1
    bindsym $mod+Shift+2 move container to workspace number 2
    bindsym $mod+Shift+3 move container to workspace number 3
    bindsym $mod+Shift+4 move container to workspace number 4
    bindsym $mod+Shift+5 move container to workspace number 5
    bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10

    bindsym $mod+f fullscreen

mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px


    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command $DOTFILES/sway/bar.sh
    #hidden_state hide

    colors {
        statusline #666666
        background #000000
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

include /etc/sway/config.d/*
